#Q2
letter = input("Enter a letter: ")
number = int(input("Enter a number: "))
for i in range(number):
  print(letter)

#Q3
number=int(input("Enter a number to find its 10 times tables: "))
for i in range(1,11):
  print(i, "times",number," is: ",i*number)

#Q4
